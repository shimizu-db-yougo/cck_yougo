{% extends "CCKClientBundle::layout.html.twig" %}

{% block contents %}
<div class="row">
<blockquote class="blockquote-bottom pdr-0">
	<p>{{ 'text.yougo.list.title'|trans }}</p>
</blockquote>
</div>

<!-- yougo search area -->
<form action="{{ path('client.yougo.index') }}" class="form-horizontal" method="GET" autocomplete="off">
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-primary">
			<div class="panel-heading">{{ 'text.search.conditions'|trans }}</div>
			<div class="panel-body">
				<div class="row">
					<div class="form-horizontal">
						<div class="form-group">
							<div class="col-lg-12">
								<label class="col-sm-2 field_title">{{ 'text.yougo.curriculum'|trans }}</label>
								<div class="col-sm-2">
									<select class="form-control" name="curriculum">
										<option value="0">--------------</option>
										{% for cur in cur_list %}
											<option value="{{ cur.id }}">{{ cur.name }}</option>
										{% endfor %}
									</select>
								</div>
								<label class="col-sm-2 field_title">{{ 'text.yougo.version'|trans }}</label>
								<div class="col-sm-2">
									<select class="form-control" name="version">
										<option value="0">--------------</option>
										{% for ver in ver_list %}
											<option value="{{ ver.id }}">{{ ver.name }}</option>
										{% endfor %}
									</select>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-12">
								<label class="col-sm-2 field_title">{{ 'text.yougo.head.hen'|trans }}</label>
								<div class="col-sm-2">
									<select class="form-control" name="hen">
										<option value="0">--------------</option>
										{% for hen in hen_list %}
											<option value="{{ hen.id }}">{{ hen.name }}</option>
										{% endfor %}
									</select>
								</div>
								<label class="col-sm-2 field_title">{{ 'text.yougo.head.sho'|trans }}</label>
								<div class="col-sm-2">
									<select class="form-control" name="sho">
										<option value="0">--------------</option>
										{% for sho in sho_list %}
											<option value="{{ sho.id }}">{{ sho.name }}</option>
										{% endfor %}
									</select>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-12">
								<label class="col-sm-2 field_title">{{ 'text.yougo.head.dai'|trans }}</label>
								<div class="col-sm-2">
									<select class="form-control" name="dai">
										<option value="0">--------------</option>
										{% for dai in dai_list %}
											<option value="{{ dai.id }}">{{ dai.name }}</option>
										{% endfor %}
									</select>
								</div>
								<label class="col-sm-2 field_title">{{ 'text.yougo.head.chu'|trans }}</label>
								<div class="col-sm-2">
									<select class="form-control" name="chu">
										<option value="0">--------------</option>
										{% for chu in chu_list %}
											<option value="{{ chu.id }}">{{ chu.name }}</option>
										{% endfor %}
									</select>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-12">
								<label class="col-sm-2 field_title">{{ 'text.yougo.head.ko'|trans }}</label>
								<div class="col-sm-2">
									<select class="form-control" name="ko">
										<option value="0">--------------</option>
										{% for ko in ko_list %}
											<option value="{{ ko.id }}">{{ ko.name }}</option>
										{% endfor %}
									</select>
								</div>
								<label class="col-sm-2 field_title">{{ 'text.yougo.nombre'|trans }}</label>
								<div class="col-sm-4">
									<input type="text" class="form-control" name="nombre" value="{{ nombre }}">
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-12">
								<label class="col-sm-2 field_title">{{ 'text.yougo.freq.text'|trans }}</label>
								<div class="col-sm-2">
									<select class="form-control" name="freq_text">
										<option value="0">--------------</option>
										<option value="1">A</option>
										<option value="2">B</option>
										<option value="3">C</option>
									</select>
								</div>
								<label class="col-sm-2 field_title">{{ 'text.yougo.freq.center'|trans }}</label>
								<div class="col-sm-2">
									<input type="text" class="form-control" name="center" value="{{ center }}">
								</div>
								<label class="col-sm-2 field_title">{{ 'text.yougo.news.exam'|trans }}</label>
								<div class="col-sm-2">
									<input type="checkbox" class="form-control" name="news_exam" value="{{ news_exam }}">
								</div>
							</div>
						</div>
						<hr>
						<div class="form-group">
							<div class="col-lg-12">
								<label class="col-sm-2 field_title">{{ 'text.yougo.term'|trans }}</label>
								<div class="col-sm-4">
									<input type="text" class="form-control" name="term" value="{{ term }}">
								</div>
								<div class="col-sm-2">
									<button class="btn btn-primary button_text_align" type="submit">{{ 'btn.search'|trans }}</button>
								</div>
								<div class="col-sm-2">
									<button class="btn btn-default button_text_align" type="button" OnClick="search_clear();">{{ 'btn.clear'|trans }}</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</form>

<hr>


<!-- yougo list area -->

<div class="row">
	<div class="col-lg-12 text-center">
		{{ knp_pagination_render(pagination) }}
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<table class="table table-responsive table-striped">
			<thead>
				<tr>
					<th width="120px" class="text-left">{{ 'text.yougo.han'|trans }}</th>
					<th width="50px" class="text-left">{{ 'text.yougo.go'|trans }}</th>
					<th width="80px" class="text-left">{{ 'text.yougo.yougoid'|trans }}</th>
					<th width="60px" class="text-left">{{ 'text.yougo.hid'|trans }}</th>
					<th width="240px" class="text-left">{{ 'text.yougo.clinic_name'|trans }}</th>
					<th width="70px" class="text-left">{{ 'text.yougo.kikaku'|trans }}</th>
					<th width="70px" class="text-left">{{ 'text.yougo.charge.order'|trans }}</th>
					<th width="70px" class="text-left">{{ 'text.yougo.charge.collect'|trans }}</th>
					<th width="60px" class="text-left">{{ 'text.yougo.shinko_shurui'|trans }}</th>
					<th width="70px" class="text-left">{{ 'text.yougo.kihon'|trans }}</th>
					<th width="70px" class="text-left">{{ 'text.yougo.honmon'|trans }}</th>
					<th width="70px" class="text-left">{{ 'text.yougo.pdf'|trans }}</th>
					<th width="70px" class="text-left">{{ 'text.yougo.shinko'|trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for yougo in pagination %}
				<tr class="text-center">
					<td class="text-left">{{ yougo.han_name }}</td>
					<td class="text-left">{{ yougo.volume_year }}</td>
					<td class="text-left">{{ yougo.yougo_id }}</td>
					<td class="text-left">{{ yougo.hid }}</td>
					<td class="text-left">{{ yougo.clinic_name }}</td>
					<td class="text-left">{{ yougo.kikaku }}</td>
					<td class="text-left">{{ yougo.charge_order }}</td>
					<td class="text-left">{{ yougo.charge_collect }}</td>
					<td class="text-left">{{ yougo.shinko_shurui }}</td>

					<td>
						<div class="form-inline">
							<div class="form-group">
								<a href="{{ path('client.yougo.kihon.init', {'id': yougo.id}) }}"><button class="btn btn-primary btn-sm button_yougo_list" name="id" value="{{ yougo.id }}" >{{ 'btn.kihon'|trans }}</button></a>
							</div>
						</div>
					</td>
					<td>
						<div class="form-inline">
							<div class="form-group">
								<a href="{{ path('client.yougo.honmon', {'id': yougo.id}) }}"><button class="btn btn-primary btn-sm button_yougo_list" name="id" value="{{ yougo.id }}" >{{ 'btn.honmon'|trans }}</button></a>
							</div>
						</div>
					</td>
					<td>
						<div class="form-inline">
							<div class="form-group">
								<a href="{{ path('client.yougo.pdf', {'id': yougo.id}) }}"><button class="btn btn-primary btn-sm button_yougo_list" name="id" value="{{ yougo.id }}" >{{ 'btn.pdf'|trans }}</button></a>
							</div>
						</div>
					</td>
					<td>
						<div class="form-inline">
							<div class="form-group">
								<a href="{{ path('client.progress.table', {'yougoId': yougo.yougo_id}) }}"><button class="btn btn-primary btn-sm button_yougo_list" name="id" value="{{ yougo.id }}" >{{ 'btn.shinko'|trans }}</button></a>
							</div>
						</div>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-lg-12 text-right">
		{{ cur_page }}
	</div>
</div>

<div class="row">
	<div class="col-lg-12 text-center">
		{{ knp_pagination_render(pagination) }}
	</div>
</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>

		function search_clear(){
			$('[name="han"]').val('0');
			$('[name="go"]').val('0');
			$('input[name="charge_order"]').val('');
			$('input[name="contents"]').val('');
			$('[name="status"]').val('0');
			$('input[name="hid"]').val('');
			$('[name="kikaku"]').val('0');
			$('input[name="yougo_id"]').val('');
			$('[name="kikaku_shousai"]').val('0');
			$('input[name="charge_collect"]').val('');
		}

		$(function(){
		});
	</script>
{% endblock %}
