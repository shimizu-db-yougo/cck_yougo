{% extends "CCKClientBundle::layout.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	<style>
.table-yougo {
	width: 360px;
}
.icon-half {
	width: 8.29px;
	hegiht: 16px;
	padding-bottom: 2px;
}
.icon-full {
	width: 16px;
	hegiht: 16px;
	padding-bottom: 2px;
}
.icon-3times {
	width: 48px;
	hegiht: 16px;
	padding-bottom: 2px;
}
	</style>
{% endblock %}

{% block contents %}
<div class="row">
<blockquote class="blockquote-bottom pdr-0">
	<p>{{ 'text.yougo.preview.title'|trans }}</p>
</blockquote>
</div>

<div class="row">
	<div class="col-lg-12">
		<table class="table table-yougo table-striped">
			<tbody>
				<tr class="text-center">
					<td width="60px" class="text-left">
						<div>
							<span style="font-size: 16px; font-weight: bold; font-family: sans-serif; {{ (yougo.red_letter == '1') ? 'color:#ff004C;' : ''}}">{{ getTerm(yougo.main_term) }}　{{ getTextFreqIcon(yougo.text_frequency,ranka,rankb)|raw }}{{ getCenterFreqIcon(center_main)|raw }}{{ getNewsExamIcon(yougo.news_exam)|raw }}</span>

							{% set sub_kana = '' %}
							{% set i = 0 %}
							{% for rec_sub_term in subterm %}
								{% if i == 0 %}<span style="font-size: 16px; font-family: sans-serif;">{{ getDelimiter(yougo.delimiter)|trans }}</span>{% endif %}
								<span style="font-size: 16px; font-weight: bold; font-family: sans-serif; {{ (rec_sub_term.red_letter == '1') ? 'color:#ff004C;' : ''}}">{{ getTerm(rec_sub_term.sub_term) }}{{ getTextFreqIcon(rec_sub_term.text_frequency,ranka,rankb)|raw }}{{ getCenterFreqIcon(center_sub[i])|raw }}{{ getNewsExamIcon(rec_sub_term.news_exam)|raw }}</span><span style="font-size: 16px; font-family: sans-serif;">{{ getDelimiter(rec_sub_term.delimiter)|trans }}</span>
								{% if getKana(rec_sub_term.sub_term) != '' %}{% set sub_kana = sub_kana~getKana(rec_sub_term.sub_term)~'）' %}{% endif %}
								{% set i = i + 1 %}
							{% endfor %}

							{% if getKana(yougo.main_term) != '' %}<span style="font-size: 10px; font-family: serif;">（{{ getKana(yougo.main_term) }}）</span>{% endif %}
							<span style="font-size: 10px; font-family: serif;">{% if sub_kana != '' %}{{ '（'~sub_kana }}{% endif %}</span>
							<span style="font-size: 14px; font-family: serif;">{{ replaceTag(yougo.term_explain)|raw }}</span>
							{% set i = 0 %}
							{% for rec_refer in refer %}
								{% if i == 0 %}<span style="font-size: 14px; font-family: sans-serif;">　<img src="{{ asset('./img/yubi.jpg') }}" class="icon-full" alt="yubi"></span>{% endif %}
								<span style="font-size: 14px; font-family: sans-serif;">ｐ．{{ rec_refer.nombre }}（{{ rec_refer.main_term }}）</span>
								{% set i = i + 1 %}
							{% endfor %}
						</div>
						<div class="text-right">
							{% set i = 0 %}
							{% for rec_synonym in synonym %}
								{{ getSynonymIcon(rec_synonym.synonym_id)|raw }}<span style="font-size: 14px; font-weight: bold; {{ (rec_synonym.red_letter == '1') ? 'color:#ff004C;' : ''}}">{{ rec_synonym.term }}{{ getTextFreqIcon(rec_synonym.text_frequency,ranka,rankb)|raw }}{{ getCenterFreqIcon(center_syn[i])|raw }}{{ getNewsExamIcon(rec_synonym.news_exam)|raw }}</span>{{ getDelimiterSyn(rec_synonym.delimiter)|trans }}
								{% set i = i + 1 %}
							{% endfor %}
						</div>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
	</script>
{% endblock %}
