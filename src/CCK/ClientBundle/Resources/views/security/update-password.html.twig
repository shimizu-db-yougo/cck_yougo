{% extends "CCKClientBundle::base.html.twig" %}

{% block header %}
{% endblock %}

{% block container %}
<div class="row">
	<div class="col-lg-6 col-lg-offset-3">
		<div class="panel panel-primary">
			<div class="panel-heading text-center">
				{{ 'text.update.password.title'|trans }}
			</div>
			<div class="panel-body">
				{% if error|length > 0 %}
					<div class="alert alert-danger">
					{% for error_element in error %}
						{{ error_element }}<br>
					{% endfor %}
					</div>
				{% endif %}

				{% if complete == false %}
				<form action="{{ path('client.update.password') }}" method="post" role="form" novalidate autocomplete="off">
					<div class="row">
						<div class="form-group">
							<div class="col-lg-4">
								{{ 'text.email.default'|trans }}
							</div>
							<div class="col-lg-6">
								<input type="text" id="user_id" class="form-control" name="user_id" value="" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							&nbsp;
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							<div class="col-lg-4">
								{{ 'text.password.current'|trans }}
							</div>
							<div class="col-lg-6">
								<input type="password" id="current_password" class="form-control" name="current_password" value="" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							&nbsp;
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							<div class="col-lg-4">
								{{ 'text.password.new'|trans }}
							</div>
							<div class="col-lg-6">
								<input type="password" id="password" class="form-control" name="password" value="" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							&nbsp;
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							<div class="col-lg-4">
								{{ 'text.password.new.retype'|trans }}
							</div>
							<div class="col-lg-6">
								<input type="password" id="password_retype" class="form-control" name="password_retype" value="" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							&nbsp;
						</div>
					</div>
					<div class="form-group text-center">
						<a href="{{ path('client.reset.password') }}"><button class="btn btn-default" type="button" name="back">{{ 'btn.back'|trans }}</button></a>
						&nbsp;&nbsp;&nbsp;&nbsp;
						<button class="btn btn-warning" type="submit" name="submit">{{ 'btn.send'|trans }}</button>
					</div>
				</form>
				{% endif %}

				<div class="row" align="center">
					<div class="form-inline">
						<div class="form-group">
							<a href="{{ path('client.login') }}">ログイン画面</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}